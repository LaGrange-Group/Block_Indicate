    ViewData["Title"] = "BarChart";
}

<h2>Bar Chart</h2>


<div class="row">
    <div class="col-md-3" style="padding:0px;height:100px;">
        <br />
        <p style="float:right; padding-top:2.1em">0.000505</p>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-4" style="padding-right:0px">
                <div style="height:15px; float:right; width:0%">
                    @*<span>Price: 0.000561</span>*@
                </div>
            </div>
            <div class="col-md-8" style="padding-left:0px">
                <div style="height:15px; float:left; width:80%; padding-left:0px">
                    <span style="float:right; color:green"> + 75.45 %</span><br />
                    <span style="float:right;">0.000561</span>
                </div>
            </div>
        </div>
        <br />
        <div style="width:100%; padding-top:5px;">
            <div class="row">
                <div class="col-md-4" style="padding-right:0px">
                    <div style="height:15px; border-left:0px solid gray; float:right; width:0%">

                    </div>
                </div>
                <div class="col-md-8" style="padding-left:0px">
                    <div style="height:15px; border-right:2px solid gray; float:left; width:75%">

                    </div>
                </div>
            </div>
        </div>
        <div style="width:100%; height:10px; border:1px solid lightgray; border-radius:5px;">
            <div class="row">
                <div class="col-md-4" style="padding-right:0px">
                    <div style=" height:8px; background-color:#da1e1e; border-radius:5px 0px 0px 5px; float:right; width:0%">

                    </div>
                </div>
                <div class="col-md-8" style="padding-left:0px">
                    <div style="border-left:4px solid lightgray; height:8px">
                        <div style=" height:8px; background-color:#60bb4b; border-radius:0px 5px 5px 0px; float:left; width:75%;">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3" style="padding:0px;height:100px;">
        <br />
        <p style="float:left; padding-top:2.1em">0.000574</p>
    </div>
</div>

